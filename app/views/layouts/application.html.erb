<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  <header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
				<div class="container">
					<%= link_to "Bookers", root_path, class: 'navbar-brand' %>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expand="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNavDropdown">
						<ul class="navbar-nav ml-auto">
							<% if user_signed_in? %>
							<li>
								<%= link_to user_path(current_user.id), class: 'fas fa-home nav-link text-light', method: :get do %> Home<% end %>
							</li>
							<li>
								<%= link_to users_path, class: 'fas fa-users nav-link text-light', method: :get do %> Users<% end %>
							</li>
							<li>
								<%= link_to books_path, class: 'fas fa-book-open nav-link text-light', method: :get do %> Books<% end %>
							</li>
							<li>
								<%= link_to destroy_user_session_path, class: 'fas fa-sign-out-alt nav-link text-light', method: :delete do %> logout<% end %>
							</li>
							<% else %>
							<li>
								<%= link_to root_path, class: 'nav-link text-light fas fa-home', method: :get do %> Home<% end %>
							</li>
							<li>
								<%= link_to about_path, class: 'nav-link text-light fas fa-link', method: :get do %> About<% end %>
							</li>
							<li>
								<%= link_to new_user_registration_path, class: 'nav-link text-light fas fa-user-plus', method: :get do %> sign up<% end %>
							</li>
							<li>
								<%= link_to new_user_session_path, class: 'nav-link text-light fas fa-sign-in-alt', method: :get do %> login<% end %>
							</li>
							<% end %>
						</ul>
					</div>
				</div>
			</nav>
	  </header>

	  <main>
	    <% if flash[:notice] %>
       	<div class="notice"><%= flash[:notice] %></div>
      <% end %>
			<%= yield %>
	  </main>

	  <footer>
		  <div class="container mt-5">
			  <div class="row">
				  <div class="mx-auto">
					  <p>CopyRight Infratop.inc</p>
				  </div>
			  </div>
		  </div>
	  </footer>

  </body>
</html>
