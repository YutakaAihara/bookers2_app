<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/leftside', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2 class="Users-heading">Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user), method: :get do %>
                <%= attachment_image_tag user, :image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
              </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>