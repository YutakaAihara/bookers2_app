<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2 class="User-heading mb-1">User info</h2>
      <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.profile %></th>
          </tr>
        </tbody>
      </table>
      <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog", method: :get do %><% end %>
      <% end %>
      <h2 class="new-heading">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <div class="new-contents">
          <p>Title</p>
          <div class = "new-text"><%= f.text_field :title %></div>
        </div>
        <div class="new-contents">
          <p>Body</p>
          <div class = "new-text"><%= f.text_area :body %></div>
        </div>
        <%= f.submit 'Create Book', class: "btn" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">左のページ</div>
  </div>
</div>