  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2 class="User-heading mb-1">User info</h2>
        <%= attachment_image_tag @user, :image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.profile %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @user.id == current_user.id %>
            <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog mt-3", method: :get do %><% end %>
          <% end %>
        </div>

        <h2 class="new-heading mt-3">New book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <div class="new-contents form-group">
          <p>Title</p>
          <div><%= f.text_field :title, class: "new-text form-control" %></div>
        </div>
        <div class="new-contents form-group">
          <p>Body</p>
          <div><%= f.text_area :body,class: "new-text form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2 class="book-detail-heading">Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id), method: :get do %>
                  <%= attachment_image_tag @user, :image,size: "40x40", fallback: "no_image.jpg" %><br><%= @user.name %>
                <% end %>
              </td>
              <td><%= @show_book.title %></td>
              <td><%= @show_book.body %></td>
              <% if @user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@show_book), class:"btn btn-success btn-sm" %></td>
                <td><%= link_to "Destroy", book_path(@show_book), class:"btn btn-danger btn-sm", method: :destroy, data: {confirm: "本当に消しますか？"} %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>